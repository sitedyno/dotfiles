# Some aliases...

# Disk usage
alias df='df -h'
alias du='du -h'
alias du1='du -h --max-depth=1'
alias filecount='ls -l | grep ^- | wc -l'
alias dircount='ls -l | grep ^d | wc -l'
alias symcount='ls -l | grep ^l | wc -l'

# Grep
alias grep='grep -i --color'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grepcount='grep -c --color'
alias egrepcount='egrep -c --color=auto'
alias fgrepcount='fgrep -c --color=auto'

# Directory listings
alias ls='ls -hF --color=auto'
alias lsa='ls -hAF --color=auto'
alias lsl='ls -hlAF --color=auto --time-style="+%Y-%m-%d %H:%M:%S"'
alias lst='ls -hlrtAF --color=auto --time-style="+%Y-%m-%d %H:%M:%S"'

# Search
alias fs='ls -hlAFR --color=auto --time-style="+%Y-%m-%d %H:%M:%S" | grep -i'

# tar
alias untar='tar xvf'
alias untargz='tar xvfz'
alias untarbz='tar xvfj'

# tmux
alias tmux.default='~/.dotfiles/tmux/sessions/default.sh'

# weechat (via dtach)
alias wechat='dtach -A /tmp/weechat -r winch weechat'

# Reload
alias dotRefresh='. ~/.dotfiles/bash/bashrc'
